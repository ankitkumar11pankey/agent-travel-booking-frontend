<!-- same layout, include bus meta -->
<!doctype html>
<html><head><meta charset="utf-8"/><title><%= invoice.invoiceNumber %></title><style>body{font-family:Arial;}table{width:100%;border-collapse:collapse}th,td{border:1px solid #ddd;padding:8px}.right{text-align:right}</style></head><body>
  <div style="display:flex;justify-content:space-between">
    <div>
      <h2><%= company ? company.name : "Your Company" %></h2>
      <div><%= company ? company.addressLine1 : "" %></div>
      <div>GSTIN: <%= company && company.gstNumber ? company.gstNumber : "NA" %></div>
    </div>
    <div style="text-align:right">
      <h3>Invoice</h3>
      <div>No: <strong><%= invoice.invoiceNumber %></strong></div>
      <div>Date: <%= invoice.invoiceDate %></div>
    </div>
  </div>

  <div style="margin-top:8px">
    <strong>Booking Info</strong>
    <div>Route: <%= invoice.invoiceMeta && invoice.invoiceMeta.route ? invoice.invoiceMeta.route : '' %></div>
    <div>Seats: <%= invoice.invoiceMeta && invoice.invoiceMeta.seats ? invoice.invoiceMeta.seats.join(", ") : '' %></div>
    <div>Operator: <%= invoice.invoiceMeta && invoice.invoiceMeta.operator ? invoice.invoiceMeta.operator : '' %></div>
  </div>

  <table style="margin-top:10px">
    <thead><tr><th>Description</th><th>Qty</th><th>Unit Price</th><th>Tax %</th><th class="right">Line Total</th></tr></thead>
    <tbody>
      <% items.forEach(function(it){ %>
        <tr>
          <td><%= it.description %></td>
          <td><%= it.quantity %></td>
          <td class="right"><%= Number(it.unitPrice).toFixed(2) %></td>
          <td class="right"><%= Number(it.taxPercent).toFixed(2) %></td>
          <td class="right"><%= Number(it.lineTotal).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr><td colspan="4" class="right">Subtotal</td><td class="right"><%= Number(invoice.subTotal).toFixed(2) %></td></tr>
      <tr><td colspan="4" class="right">Tax</td><td class="right"><%= Number(invoice.taxTotal).toFixed(2) %></td></tr>
      <tr><td colspan="4" class="right"><strong>Total</strong></td><td class="right"><strong><%= Number(invoice.totalAmount).toFixed(2) %></strong></td></tr>
    </tfoot>
  </table>
</body></html>
